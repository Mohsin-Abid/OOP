#include <iostream> 
using namespace std;
int main() { 
 int a,b,c,small,large; 
   
	cout << "Input three different integers: "; 
	cin>>a>>b>>c;
	large=a;
	if ( b > a );
	large = b;
	if ( c > large )
	large = c;
	small=a;
	if ( b < small )
	small = b; 
	if ( c < small )
	small = c;
	 cout << "Sum is " << a + b + c<<endl;
	 cout<< "Average is " << ( a + b + c ) / 3  <<endl;
	 cout<< "Product is " << a * b * c <<endl;
	 cout<< "Smallest is " << small<<endl;
	cout<< "Largest is " << large << endl; 
   return 0;
}
