#include <iostream> 
using namespace std;
int main() { 
	// 8 statements
		 cout << "* * * * * * * *\n";
		 cout << " * * * * * * * *\n";
		 cout << "* * * * * * * *\n";
		 cout << " * * * * * * * *\n"; 
		 cout << "* * * * * * * *\n"; 
		 cout << " * * * * * * * *\n";
		 cout << "* * * * * * * *\n";
		 cout << " * * * * * * * *\n\n";  
		 // One statement
		 cout << "* * * * * * * *\n * * * * * * * *\n* * * * * * * *\n"
		 << " * * * * * * * *\n* * * * * * * *\n * * * * * * * *\n"
		 << "* * * * * * * *\n * * * * * * * *\n";
   return 0;
}
